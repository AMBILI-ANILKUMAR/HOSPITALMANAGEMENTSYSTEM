@model HOSPITALMANAGEMENTSYSTEM.Models.Doctors
@using HOSPITALMANAGEMENTSYSTEM.Models;


@{
    ViewBag.Title = "AddDoctor";
    Layout = "AdminMaster.cshtml"; }
<body style="background-color: #f4f5e2">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <center>
            <h1 class="text-dark" style="margin-top:20px">Doctor Registration</h1>
            <div class="container-fluid">
                <div class="col-md-7">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <br />
                            <div class="row">
                                <div class="col-md-4">
                                    <b>DOCTOR ID</b>
                                    @Html.EditorFor(model => model.DoctId, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DoctId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    <b>DOCTOR NAME</b>
                                    @Html.EditorFor(model => model.DoctName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DoctId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">

                                    <b>GENDER</b><br />
                                    @Html.RadioButtonFor(e => e.Gender, "Male")Male&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    @Html.RadioButtonFor(e => e.Gender, "Female")Female
                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-4">
                                    <b>SPECIALIZATION</b>
                                    @Html.DropDownListFor(M => M.spclId, new SelectList(Model.SpclDropdown, "Value", "Text"), "Select", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.spclId, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    <b>ROLE</b>
                                    @Html.EditorFor(model => model.role, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    <b>AGE</b>
                                    @Html.TextBoxFor(model => model.age, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.age, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-4">
                                    <b>ADDRESS</b>
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    <b>PHONE NUMBER</b>
                                    @Html.EditorFor(model => model.phonenumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.phonenumber, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-4">
                                    <b>Email</b>

                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })

                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-4">
                                    <b>PASSWORD</b>

                                    @Html.PasswordFor(model => model.password, new { @class = "form-control" })

                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="REGISTER" class="btn btn-dark" />
                                    <p style="color:red">@ViewBag.info</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </center>








    }
    </body>

