@model HOSPITALMANAGEMENTSYSTEM.Models.Specializations
@using HOSPITALMANAGEMENTSYSTEM.Models;

@{
    ViewBag.Title = "AddSpecialization";
    Layout = "~/Views/Admin/AdminMaster.cshtml";
}



<center>
    @using (Html.BeginForm("AddSpecialization", "Admin", FormMethod.Post))
    {
        <div class="container" style="margin-top:150px">
            <div class="row">
                <div class="col">

                </div>
                <div class="col-8">
                    <div class="row" >
                        <div class="col">
                            <b>Specialization</b>
                        </div>
                        <div class="col">
                            @Html.TextBoxFor(e => e.specializationName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.specializationName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            <input type="submit" value="ADD SPECIALIZATION" class="btn btn-dark" />
                            <p style="color:red">@ViewBag.info</p>
                        </div>
                    </div>
                </div>
                <div class="col">

                </div>
            </div>
        </div>
    }
</center>

